<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TextToSpeech">


    <EditText
        android:id="@+id/editValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:ems="10"
        android:hint="Enter Your Text Here"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/pitch"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editValue"
        android:layout_marginTop="64dp"
        android:text="Pitch"
        android:textSize="16dp"
        tools:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editValue"
        android:layout_marginTop="95dp"
        android:text="Speed"
        android:textSize="16dp"
        tools:textColor="@android:color/background_dark" />

    <SeekBar
        android:id="@+id/pitchSeek"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/pitch"
        android:layout_marginStart="107dp" />

    <SeekBar
        android:id="@+id/speedSeek"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pitchSeek"
        android:layout_alignTop="@+id/speed" />

    <Button
        android:id="@+id/sayIt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="155dp"
        android:text="Say It!"
        android:enabled="false"/>



</RelativeLayout>